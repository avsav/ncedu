<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/tool"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/tool http://www.springframework.org/schema/tool/spring-tool.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.ncedu.groznova.simplewebtask"/>
    <context:annotation-config/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="isCube" class="com.ncedu.groznova.simplewebtask.factsaboutnum.IsCube"/>
    <bean id="isLeonardoSeq" class="com.ncedu.groznova.simplewebtask.factsaboutnum.IsLeonardoSeq"/>
    <bean id="isPalindrom" class="com.ncedu.groznova.simplewebtask.factsaboutnum.IsPalindrom"/>
    <bean id="isPowerOfTwo" class="com.ncedu.groznova.simplewebtask.factsaboutnum.IsPowerOfTwo"/>
    <bean id="isPrime" class="com.ncedu.groznova.simplewebtask.factsaboutnum.IsPrime"/>

    <!-- Classifiers injection -->
    <bean id="classifire" class="com.ncedu.groznova.simplewebtask.Classifier">
    <property name="factsAboutNum">
        <list>
            <ref bean="isCube"/>
            <ref bean="isLeonardoSeq"/>
            <ref bean="isPalindrom"/>
            <ref bean="isPowerOfTwo"/>
            <ref bean="isPrime"/>
        </list>
    </property>
    </bean>

</beans>